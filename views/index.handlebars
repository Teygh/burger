<div id="header-container">
        <h1 class="text-center text-dark" style="font-family:'Alfa Slab One', cursive;margin:20px;margin-bottom:0px;font-size:50px;">Eat-Da-Burger</h1>
    </div>
    <hr>

<div class="container">

    <div class="jumbotron" id="left">
        <h3 class="display-6">Burgers Available to be Eaten!!!</h1>
            <ul>
                {{#each burger_data}} {{#unless this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" type="text" name="burger_id" value={{this.id}}>

                        <button type="submit" class="btn btn-primary">Eat the burger!</button>
                    </form>
                </li>
                {{/unless}} {{/each}}
            </ul>
    </div>



    <div class="jumbotron" id="right">
        <h3 class="display-6">Burgers Already Devoured !!</h1>
        <li>
            {{#each burger_data}} {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
        </li>
        {{/if}} {{/each}}
    </div>

    <div class="jumbotron" id="bottom">
        <h3 class="display-6">Add a Burger</h1>
        <form action="/burgers/create" method="POST">
            <input type="text" class="form-control" name="burger_name" id="enter_text">
            <p>Enter the burger you want to eat and click the "Submit" button.</p>
            <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
        </form>
    </div>
</div>